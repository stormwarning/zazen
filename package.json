{
  "name": "@zazen/cli",
  "version": "0.3.2",
  "description": "Manage project tooling, free of weariness and confusion.",
  "repository": "stormwarning/zazen",
  "license": "ISC",
  "author": "Jeff (https://tidaltheory.io)",
  "type": "module",
  "bin": {
    "zazen": "bin/cli.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "build": "esbuild src/cli.js --bundle --platform=node --outdir=dist --external:sade",
    "changeset": "changeset add",
    "prepare": "husky install",
    "release": "changeset publish",
    "test": "ava"
  },
  "lint-staged": {
    "*.{js,cjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "dependencies": {
    "@zazen/eslint-config": "5.1.0",
    "consola": "2.15.3",
    "esbuild-register": "3.3.2",
    "eslint": "8.12.0",
    "execa": "6.1.0",
    "outdent": "0.8.0",
    "prettier": "2.6.1",
    "prettier-plugin-packagejson": "2.2.17",
    "sade": "1.8.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.4",
    "@changesets/cli": "2.22.0",
    "@types/sade": "1.7.4",
    "ava": "4.0.1",
    "esbuild": "0.14.28",
    "esm-utils": "3.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.3"
  }
}
